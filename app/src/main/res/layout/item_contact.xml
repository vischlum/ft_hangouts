<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/contact_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/contact_picture"
        android:maxWidth="32dp"
        android:maxHeight="32dp"
        android:minWidth="32dp"
        android:minHeight="32dp"
        android:src="@drawable/ic_person" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/contact_picture"
        android:layout_alignBottom="@id/contact_picture"
        android:layout_toStartOf="@id/contact_fav"
        android:layout_toEndOf="@id/contact_picture"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        tools:text="Example contact" />

    <ImageView
        android:id="@+id/contact_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/contact_picture"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/contact_favorite"
        android:src="@drawable/ic_fav" />

</RelativeLayout>